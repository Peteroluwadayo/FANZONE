<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FanZone" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#DCD8D8</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="RatingBar"  parent="Theme.AppCompat">
        <item name="colorControlNormal">#454242</item>
        <item name="colorControlActivated">#FF666F</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:minHeight">25dp</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>


    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">600dp</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimaryInverse">#FD6871</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#DCD8D8</item>
        <item name="colorControlActivated">#DCD8D8</item>
        <item name="colorControlHighlight">#DCD8D8</item>
    </style>


    <style name="Theme.FanZone" parent="Base.Theme.FanZone" />
</resources>